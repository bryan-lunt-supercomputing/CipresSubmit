<resource name="trestles" xmlns="http://www.phylog.org/submit/resource">
	<hosts>
		<host pattern="trestles-.*\.sdsc\.edu"/>
	</hosts>
	<account>
		<accountstr>TG-DEB090011</accountstr>
	</account>
	<batch-system type="PBS"> <!-- Setup an XML namespace for that? -->
		<templates>
			<template name="batch_command.run" filename="runfile.template">
				<param name="cluster_header">
source /etc/profile.d/modules.sh
				</param>
			</template>
			<template name="batch_command.cmdline" filename="cmdfile.template">
			</template>
		</templates>
		<queues>
			<queue id="shared" name="shared">
				<cores-per-node>32</cores-per-node>
				<cores-increment>1</cores-increment>
				<max-run-hours>336.0</max-run-hours>
				<env-vars>
				</env-vars>
				<node-properties>
				</node-properties>
			</queue>
			<queue id="normal" name="normal">
				<cores-per-node>32</cores-per-node> <!-- cores-increment defaults to the same value as cores-per-node if not given. -->
				<max-run-hours>336.0</max-run-hours>
				<env-vars>
					<env name="QOS">2</env>
				</env-vars>
				<node-properties>
				</node-properties>
			</queue>
		</queues>
	</batch-system>
</resource>